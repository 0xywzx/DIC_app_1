<h3>以下の内容で、送信する。</h3>

<%= form_with(model: @blog, url: blogs_path, local: true) do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :lecture_name %>
  <%= form.hidden_field :difficulty %>
  <%= form.hidden_field :content %>

  <p>名前:<%= @blog.name %></p>
  <p>科目名:<%= @blog.lecture_name %></p>
  <p>難易度:<%= @blog.difficulty %></p>
  <p>評価:<%= @blog.content %></p>
  <%= form.submit  "登録する" %>
<% end %>

<%= form_with(model: @blog, url: new_blog_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :name %>
  <%= form.hidden_field :lecture_name %>
  <%= form.hidden_field :difficulty %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back' %>
<% end %>
